<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/tran"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tran"
        android:layout_centerInParent="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete_button_dialog"
        android:textStyle="bold"
        android:textColor="@color/Red_Portal"
        android:background="@drawable/add_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_button_dialog"
        android:layout_centerHorizontal="true"
        android:text="OR"
        android:textColor="@color/Glavni"
        android:textStyle="italic"
        android:id="@+id/Between_dialog"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solved"
        android:id="@+id/solved_button_dialog"
        android:textStyle="bold"
        android:textColor="@color/Green_Univer"
        android:background="@drawable/add_edittext"
        android:layout_below="@+id/Between_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>